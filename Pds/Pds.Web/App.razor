<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
            <Authorizing>
                <p>Восстанавливаю сессию, погодь...</p>
            </Authorizing>
            <NotAuthorized>
                <h1>Конент закрыт авторизацией.</h1>
                <p>Залогинься, и будет тебе счастье :)</p>
            </NotAuthorized>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout)">
            <p>Опачки! Нет такой страницы.</p>
        </LayoutView>
    </NotFound>
</Router>

