    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Главная
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="persons">
                <span class="oi oi-people" aria-hidden="true"></span> Персоны
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="content">
                <span class="oi oi-video" aria-hidden="true"></span> Контент
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="map">
                <span class="oi oi-map" aria-hidden="true"></span> Карта
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <a class="nav-link" href="https://s.itbeard.com/" target="_blank">
                <span class="oi oi-link-intact" aria-hidden="true"></span> Сокращатель ссылок
            </a>
        </li>
        <li class="nav-item px-3">
            <a class="nav-link" href="https://github.com/itbeard/people-discovery-system" target="_blank">
                <span class="oi oi-link-intact" aria-hidden="true"></span> GitHub
            </a>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}